<link rel="stylesheet" href="{{ 'image-banner.css' |  asset_url }}">

<div class="image-banner">
  <div class="image-banner__content">
    <div class="image-banner__info">
      <h2 class="heading-2 white uppercase">{{ section.settings.heading }}</h2>
      <p class="text-2 secondary-white image-banner__text">
        {{ section.settings.paragraph }}
      </p>
      <a class="link-gray" href="{{ section.settings.cta_url }}">{{ section.settings.cta_text }}</a>
    </div>
    <div class="image-banner__img">
      <img src="{{ section.settings.content_image | image_url: width: 570 }}" width="570" height="617" alt="">
    </div>
  </div>
</div>

{% comment %} TODO: move content into blocks but keep image in settings {% endcomment %}
{% schema %}
  {
    "name": "Image Banner",
    // TODO: add section tag & class
    // tag: 'section',
    // class: 'image-banner',
    "settings": [
      {
        "type": "image_picker",
        "id": "content_image",
        "label": "Content Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Default Heading"
      },
      {
        "type": "text",
        "id": "paragraph",
        "label": "Paragraph",
        "default": "Default Paragraph"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text",
        "default": "CTA Text"
      },
      {
        "type": "url",
        "id": "cta_url",
        "label": "CTA URL"
      }
    ]
  }
{% endschema %}
