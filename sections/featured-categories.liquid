<link rel="stylesheet" href="{{ 'featured-collection.css' |  asset_url }}">

<div class="collection">
  <div class="collection__clip"></div>

  {% comment %} TODO: get rid of 'categories' snippet, move all of its content to this file and throw it into a garbage {% endcomment %}
  <div class="collection__content">
    {% comment %} TODO: no need for with but there should be a comma(,) after 'categories' {% endcomment %}
    {% render 'categories' with heading: section.settings.heading, paragraph: section.settings.paragraph, collections: section.settings.collections %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Categories",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Default Heading"
    },
    {
      "type": "text",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "Default Paragraph"
    },
    {
      "type": "collection_list",
      "id": "collections",
      "label": "Collections"
    },
    // remove product_list
    {
      "type": "product_list",
      "id": "products",
      "label": "Products"
    }
  ],
  "presets": [
    {
      "name": "Categories",
      "category": "Custom"
    }
  ]
}
{% endschema %}
