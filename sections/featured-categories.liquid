<link rel="stylesheet" href="{{ 'featured-collection.css' |  asset_url }}">

<div class="collection">
  <div class="collection__clip"></div>

  <div class="collection__content">
    <div class="categories">
      <h3 class="heading-3 red uppercase">{{ section.settings.heading }}</h3>
      <p class="text-3 secondary-gray collection__text">{{ section.settings.paragraph }}</p>

      <div class="categories__wrapper">
        {% for collection in section.settings.collections %}
          <div class="categories__list">
            <img src="{{ collection.featured_image |  image_url: width: 390 }}" width="390" height="430" alt="">

            <div class="categories__list-desc">
              <h6 class="heading-4 red uppercase">{{ collection.title }}</h6>
              <p class="text-4 white">
                {{ collection.products.size }}
                {% if collection.products.size > 1 %}products{% else %}product{% endif %}
              </p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Categories",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Default Heading"
    },
    {
      "type": "text",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "Default Paragraph"
    },
    {
      "type": "collection_list",
      "id": "collections",
      "label": "Collections"
    },
    {
      "type": "product_list",
      "id": "products",
      "label": "Products"
    }
  ]
}
{% endschema %}
