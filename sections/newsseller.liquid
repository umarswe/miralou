<link rel="stylesheet" href="{{ 'newsseller.css' |  asset_url }}">

<div class="newsseller__container">
  <div class="newsseller__wrapper">
    <div class="newsseller__content">
      <h4 class="heading-4 white uppercase newsseller__title">{{ section.settings.heading }}</h4>
      <p class="text-5 gray">
        {{ section.settings.text }}
      </p>
    </div>
    <form class="newsseller__form">
      {% comment %} TODO: placeholder should come from settings {% endcomment %}
      <input type="email" placeholder="Enter your e-mail">
      <button class="link-red">{{ section.settings.button_text }}</button>
    </form>
  </div>
</div>

{% schema %}
{
  "name": "newsseller",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Default Heading"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Default Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Subscribe"
    }
  ],
  "presets": [
    {
      "name": "Newsseller",
      "category": "Custom"
    }
  ]
}
{% endschema %}
