<link rel="stylesheet" href="{{ 'header.css' |  asset_url }}">

<header class="header">
  <div class="header__logo">
    <img src="{{ section.settings.logo |  image_url: width: 106}}" width="106" height="24" alt="">
  </div>

  <ul class="header__links">
    {% for link in linklists['main-menu'].links %}
      <li class="header__link">
        <a href="{{ link.url }}">
          <h6 class="heading-6">{{ link.title }}</h6>
        </a>
      </li>
    {% endfor %}
  </ul>

  <div class="header__icons">
    {% for block in section.blocks %}
      {% if block.type == 'navigation' %}
        {% assign icon_type = block.settings.nav_icon %}
        {% assign icon_image = block.settings.nav_icon_image %}

        {% if icon_type == 'search' %}
          <a href="/search">
            <img src="{{ icon_image | image_url: width: 24 }}" width="24" height="24" alt="Search">
          </a>
        {% elsif icon_type == 'wishlist' %}
          <a href="/pages/wishlist">
            <img src="{{ icon_image | image_url: width: 24 }}" width="24" height="24" alt="Wishlist">
          </a>
        {% elsif icon_type == 'cart' %}
          <a href="{{ routes.cart_url }}">
            <img src="{{ icon_image | image_url: width: 24 }}" width="24" height="24" alt="Cart">
          </a>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ],
  "blocks": [
    {
      "type": "navigation",
      "name": "Navigation",
      "settings": [
        {
          "type": "select",
          "id": "nav_icon",
          "label": "Navigation Icon",
          "options": [
            {
              "value": "search",
              "label": "Search"
            },
            {
              "value": "wishlist",
              "label": "Wishlist"
            },
            {
              "value": "cart",
              "label": "Cart"
            }
          ]
        },
        {
          "type": "image_picker",
          "id": "nav_icon_image",
          "label": "Navigation Icon Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Header",
      "category": "Header"
    }
  ]
}
{% endschema %}
