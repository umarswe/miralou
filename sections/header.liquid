<link rel="stylesheet" href="{{ 'header.css' |  asset_url }}">

<header class="header">
  <div class="header__logo">
    <img src="{{ section.settings.logo |  image_url: width: 106}}" width="106" height="24" alt="">
  </div>

  <ul class="header__links">
    {% for link in linklists['main-menu'].links %}
      <li class="header__link">
        <a href="{{ link.url }}">
          <h6 class="heading-6">{{ link.title }}</h6>
        </a>
      </li>
    {% endfor %}
  </ul>

  <div class="header__icons">
    {% for block in section.blocks %}
      {% if block.type == 'navigation' %}
        <a href="{{ block.settings.nav_url }}">
          <img src="{{ block.settings.nav_icon |  image_url: width: 24 }}" width="24" height="24" alt="">
        </a>
      {% endif %}
    {% endfor %}
    {% comment %}
      {% render 'search-icon' %}
      {% render 'liked-icon' %}
      {% render 'cart-icon' %}
    {% endcomment %}
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ],
  "blocks": [
    {
      "type": "navigation",
      "name": "Navigation",
      "settings": [
        {
          "type": "url",
          "id": "nav_url",
          "label": "URL"
        },
        {
          "type": "image_picker",
          "id": "nav_icon",
          "label": "Navigation Icon"
        }
      ]
    }
  ]
}
{% endschema %}
