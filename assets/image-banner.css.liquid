.image-banner {
  background-image: url("{{ "image-banner-bg.png" | asset_url }}");
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;

  width: 100%;
  height: 717px;
}

.image-banner__content{
  max-width: 970px;
  margin-right: auto;
  margin-left: auto;
  display: flex;
  gap: 30px;
  align-items: center;
  justify-content: center;
}

.image-banner__text{
  padding: 25px 0 40px 0;
}
